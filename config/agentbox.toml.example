# Agent Box Configuration
# Copy to /data/config/agentbox.toml and customize

# =============================================================================
# General Settings
# =============================================================================
[general]
# Default working directory for new agents
default_dir = "/data/repos"

# Default shell for agents
shell = "/bin/bash"

# Auto-attach to new agents after creation
auto_attach = false

# =============================================================================
# Git Worktree Settings
# =============================================================================
[worktrees]
# Enable git worktree support
enabled = true

# Directory for worktrees (relative to repo root)
dir = ".worktrees"

# Default base branch for new worktrees
base_branch = "main"

# Auto-create worktree when @branch syntax is used
auto_create = true

# =============================================================================
# Webhook Settings
# =============================================================================
[webhook]
# Enable webhook receiver
enabled = true

# Listen address
addr = ":8080"

# Auth token (optional, for securing the webhook)
# auth_token = "your-secret-token"

# Enable tmux injection (send messages directly to agent)
allow_inject = true

# =============================================================================
# Project Aliases
# =============================================================================
# Define shortcuts for common repos/directories
# Usage: cc-new myagent @myproject
#        cc-new myagent @myproject/feature-branch

[projects.myproject]
path = "/data/repos/myproject"
worktrees_dir = ".worktrees"
base_branch = "main"

# [projects.another]
# path = "/data/repos/another-repo"
# base_branch = "develop"

# =============================================================================
# Agent Defaults
# =============================================================================
[agent]
# Default Claude Code arguments
claude_args = ""

# Session name prefix
name_prefix = ""

# Log directory
log_dir = "/data/logs"

# Inbox directory (for reply-from-phone)
inbox_dir = "/data/inbox"
